<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/cave"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You reach a fork in the road with paths leading to a mountain or back to the village."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:paddingBottom="24dp"/>

    <Button
        android:id="@+id/buttonChoice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Follow the Path to the Mountain"/>

    <Button
        android:id="@+id/buttonChoice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to the Stranger"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>
</LinearLayout>
